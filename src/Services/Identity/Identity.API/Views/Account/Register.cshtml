@model WhiskyArchive.Services.Identity.API.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="container" style="max-width:330px">
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <img class="mb-4 drop-shadow" src="~/images/brand_main.png" alt="" width="72" >
        <h1 class="h3 mb-3 font-weight-normal mb-5">會員註冊</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">

            <div class="form-group col-sm-12">
                <label asp-for="Email" class="control-label form-label"></label>
                <input asp-for="Email" class="form-control form-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="User.Nickname" class="control-label form-label">暱稱</label>
                <input asp-for="User.Nickname" class="form-control form-input" />
                <span asp-validation-for="User.Nickname" class="text-danger" />
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="User.PhoneNumber" class="control-label form-label">電話號碼</label>
                <input asp-for="User.PhoneNumber" class="form-control form-input" />
                <span asp-validation-for="User.PhoneNumber" class="text-danger" />
            </div>
        </div>
        <br /><br />

        <div class="row">

            <div class="form-group col-sm-offset-6"></div>
            <div class="form-group col-sm-12">
                <label asp-for="Password" class="control-label form-label">密碼</label>
                <input asp-for="Password" class="form-control form-input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="ConfirmPassword" class="control-label form-label">確認密碼</label>
                <input asp-for="ConfirmPassword" class="form-control form-input" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <br /><br />
        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary btn-block">&nbsp;註冊&nbsp;</button>
        </div>
        <br /><br />
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}