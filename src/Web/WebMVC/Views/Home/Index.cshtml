    <div id="carouselExampleIndicators" class="carousel slide container p-0 rounded box-shadow-custom" data-ride="carousel" style="">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner rounded">
            <div class="carousel-item carousel-size-limit active ">
                <img src="~/images/main_banner.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item carousel-size-limit">
                <img src="~/images/banner_1.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item carousel-size-limit">
                <img src="~/images/banner_2.png" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container p-0">
        <div class="my-2 p-3 rounded box-shadow bg-gradient-dark-transparent-75 ">

            <h6 class="border-bottom border-gray pb-2 mb-0 text-light">近期更新</h6>
            @if (Model.Whiskies.Count() > 0)
            {
                @foreach (var whisky in Model.Whiskies)
                {
                    <div class="media text-white-50 pt-3">
                        <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="@(whisky.WhiskyImages.FirstOrDefault()?? Url.Content("~/images/whisky_default.png"))" data-holder-rendered="true">
                        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-dark">
                            <strong class="d-block text-gray-dark">@whisky.WhiskyNameChinese</strong>
                            來自 @whisky.Distillery 蒸餾廠
                            @if (!string.IsNullOrEmpty(whisky.Bottler))
                            {
                                var text = "，" + whisky.Bottler + "裝瓶";
                                @text.ToString()
                            }
                            @if (whisky.StatedAge != null)
                            {
                                @if (!string.IsNullOrEmpty(whisky.CaskType))
                                {
                                    var text = "，" + whisky.StatedAge + "年" + whisky.CaskType + "陳釀";
                                    @text
                                }
                                else
                                {
                                    var text = "，" + whisky.StatedAge + "年陳釀";
                                    @text
                                }
                            }
                            @if (whisky.Strength != 0)
                            {
                                if (whisky.Size != 0)
                                {
                                    var text = "，" + (whisky.Strength * 100).ToString() + "%強度、" + whisky.Size.ToString() + "ML";
                                    @text
                                }
                                else
                                {
                                    var text = "，" + (whisky.Strength * 100).ToString() + "%強度";
                                    @text
                                }
                            }
                            @if (!string.IsNullOrEmpty(whisky.CaskNumber))
                            {
                                var text = "，桶號" + whisky.CaskNumber;
                                @text
                            }

                            @if (whisky.WhiskyBaseRating != 0)
                            {
                                var rating = whisky.WhiskyBaseRating;
                                var threshold = 90;
                                var text = "，" + "Whisky Base " + rating.ToString();
                                if (rating > threshold)
                                {
                                    text += " 高分";
                                }
                                else
                                {
                                    text += " 評分";
                                }

                                @text
                            }

                            @if (whisky.NumOfBottles != null)
                            {
                                var text = "，限量" + whisky.NumOfBottles.ToString() + "瓶";
                                @text
                            }

                            。
                        </p>
                    </div>
                }

            }
            else
            {
                <div class="esh-catalog-items row">
                    查無結果
                </div>
            }
            <small class="d-block text-right mt-3 ">
                <a asp-area="" asp-controller="Whisky" asp-action="Index" class="text-white-50">
                    查看全部
                </a>
            </small>
        </div>
        <div class="my-3 p-3 rounded box-shadow bg-gradient-dark-transparent-75">
            <h6 class="border-bottom text-white border-gray pb-2 mb-0">近期採購</h6>

